<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.veehd"
       name="VeeHD"
       version="1.3.1"
       provider-name="nixa">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Search and stream good movies</summary>
    <description>Search and stream good movies from veehd.com. Get user/pass from http://veehd.com</description>
    <platform>all</platform>
  </extension>
</addon>
